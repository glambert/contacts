{
  "autoprefixer": {
    "browsers": ["last 2 versions", "ie >= 10"]
  },
  "browsersync": {
    "baseDir": "./",
    "files": [
      "*.html",
      "dist/css/*.css",
      "dist/img/**/*",
      "dist/vendor/**/*"
    ]
  },
  "minifycss": {
    "src": "dist/css/**/!(*.min).css",
    "dest": "dist/css"
  },
  "revision": {
    "src": [
      "dist/css/*.css",
      "dist/js/**.*"
    ],
    "base": "../dist/assets",
    "dest": "dist/build"
  },
  "sass": {
    "src": "src/css/*.scss",
    "dest": "dist/css"
  },
  "webpack": {
    "filename": "index.js",
    "root": "src/js",
    "entry": "src/js/index",
    "output": "dist/js",
    "publicPath": "assets/js/"
  },
  "watch": {
    "sass": "src/css/**/*.scss"
  },
  "stylelint": {
    "src": [
      "src/css/**/*",
      "src/js/**/*.{css,scss}"
    ]
  }
}